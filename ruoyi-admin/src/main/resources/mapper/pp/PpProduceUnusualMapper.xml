    <sql id="selectPpProduceUnusualVo">
        select id, wcode, utime, uuser, pcode, pname, pwork, qty, last_time, problem_desc, un.remark, un.is_valid, un.create_by, un.create_time, un.update_by, un.update_time, attribute1, attribute2, attribute3 
        from pp_produce_unusual un left join sys_user su on un.update_by = su.login_name
    </sql>

    <select id="selectPpProduceUnusualList" parameterType="PpProduceUnusual" resultMap="PpProduceUnusualResult">
        <include refid="selectPpProduceUnusualVo"/>
        <where>
            <if test="uStarttime != null "> and utime >= #{uStarttime}</if>
            <if test="uEndtime != null "> and utime  &lt;=#{uEndtime}</if>  
            <if test="wcode != null  and wcode != ''"> and wcode = #{wcode}</if>
            <if test="utime != null "> and utime = #{utime}</if>
            <if test="uuser != null  and uuser != ''"> and uuser = #{uuser}</if>
            <if test="pcode != null  and pcode != ''"> and pcode = #{pcode}</if>
            <if test="pname != null  and pname != ''"> and pname like concat('%', #{pname}, '%')</if>
            <if test="pwork != null  and pwork != ''"> and pwork = #{pwork}</if>
            <if test="qty != null "> and qty = #{qty}</if>
            <if test="lastTime != null "> and last_time = #{lastTime}</if>
            <if test="problemDesc != null  and problemDesc != ''"> and problem_desc = #{problemDesc}</if>
            and is_valid = '1'  ${params.dataScope}
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by id desc
    </select>
    
    <select id="selectPpProduceUnusualById" parameterType="Long" resultMap="PpProduceUnusualResult">
        <include refid="selectPpProduceUnusualVo"/>
        where id = #{id}
