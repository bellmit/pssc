    <sql id="selectQcBadProjectVo">
        select id, wcode, pcode, pname, project, pspec, t.lot, t.inqty, t.qty, outqty, t.remark, okratio,  cwork,  cstation,  t.is_valid,  t.create_by,  t.create_time,  su.user_name update_by,  t.update_time, attribute1, memo, attribute2, tempway, attribute3, cause, causeway, handleway 
        from qc_bad_project t left join sys_user su on t.update_by = su.login_name
    </sql>

    <select id="selectQcBadProjectList" parameterType="QcBadProject" resultMap="QcBadProjectResult">
        <include refid="selectQcBadProjectVo"/>
        <where>  
            and is_valid = '1'
            <if test="wcode != null  and wcode != ''"> and wcode like concat('%', #{wcode}, '%') </if>
            <if test="pcode != null  and pcode != ''"> and pcode like concat('%', #{pcode}, '%') </if>
            <if test="pname != null  and pname != ''"> and pname like concat('%', #{pname}, '%')</if>
            <if test="pspec != null  and pspec != ''"> and pspec = #{pspec}</if>
            <if test="lot != null  and lot != ''"> and lot = #{lot}</if>
            <if test="cwork != null  and cwork != ''"> and cwork = #{cwork}</if>
            <if test="cstation != null  and cstation != ''"> and cstation = #{cstation}</if>
            <if test="memo != null  and memo != ''"> and memo = #{memo}</if>
            <if test="tempway != null  and tempway != ''"> and tempway = #{tempway}</if>
            <if test="cause != null  and cause != ''"> and cause = #{cause}</if>
            <if test="causeway != null  and causeway != ''"> and causeway = #{causeway}</if>
            <if test="handleway != null  and handleway != ''"> and handleway = #{handleway}</if>
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by t.create_time desc
    </select>
    
    <select id="selectQcBadProjectById" parameterType="String" resultMap="QcBadProjectResult">
        <include refid="selectQcBadProjectVo"/>
        where id = #{id}
    </select>
        
