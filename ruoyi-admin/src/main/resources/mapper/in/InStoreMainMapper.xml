<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saas.pssc.mapper.InStoreMainMapper">
    
    <resultMap type="InStoreMain" id="InStoreMainResult">
        <result property="id"    column="id"    />
        <result property="ptype"    column="ptype"    />
        <result property="pcode"    column="pcode"    />
        <result property="inputUser"    column="input_user"    />
        <result property="inputTime"    column="input_time"    />
        <result property="remark"    column="remark"    />
        <result property="isValid"    column="is_valid"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="attribute1"    column="attribute1"    />
        <result property="attribute2"    column="attribute2"    />
        <result property="attribute3"    column="attribute3"    />
    </resultMap>

    <resultMap id="InStoreMainInStoreDetailResult" type="InStoreMain" extends="InStoreMainResult">
        <collection property="inStoreDetailList" notNullColumn="sub_id" javaType="java.util.List" resultMap="InStoreDetailResult" />
    </resultMap>

    <resultMap type="InStoreDetail" id="InStoreDetailResult">
        <result property="id"    column="sub_id"    />
        <result property="mainId"    column="sub_main_id"    />
        <result property="mcode"    column="sub_mcode"    />
        <result property="mname"    column="sub_mname"    />
        <result property="mlot"    column="sub_mlot"    />
        <result property="vendor"    column="sub_vendor"    />
        <result property="qty"    column="sub_qty"    />
        <result property="iqty"    column="sub_iqty"    />
        <result property="unit"    column="sub_unit"    />
        <result property="isValid"    column="sub_is_valid"    />
        <result property="createBy"    column="sub_create_by"    />
        <result property="createTime"    column="sub_create_time"    />
        <result property="updateBy"    column="sub_update_by"    />
        <result property="updateTime"    column="sub_update_time"    />
        <result property="attribute1"    column="sub_attribute1"    />
        <result property="attribute2"    column="sub_attribute2"    />
        <result property="attribute3"    column="sub_attribute3"    />
    </resultMap>

    <sql id="selectInStoreMainVo">
        select id, ptype, pcode, input_user, input_time, t.remark, t.is_valid, t.create_by, t.create_time, t.update_by, t.update_time, attribute1, attribute2, attribute3 
        from in_store_main t 
        left join sys_user su on t.create_by = su.login_name 
    </sql>

    <select id="selectInStoreMainList" parameterType="InStoreMain" resultMap="InStoreMainResult">
        <include refid="selectInStoreMainVo"/>
        <where>  
            <if test="inputStarttime != null "> and t.input_time >= #{inputStarttime}</if>
            <if test="inputEndtime != null "> and t.input_time  &lt;=#{inputEndtime}</if>
            <if test="ptype != null  and ptype != ''"> and ptype = #{ptype}</if>
            <if test="pcode != null  and pcode != ''"> and pcode = #{pcode}</if>
            <if test="inputUser != null  and inputUser != ''"> and input_user = #{inputUser}</if>
            <if test="inputTime != null "> and input_time = #{inputTime}</if>
            and is_valid = '1'  ${params.dataScope}
        </where>
        order by t.create_time desc
    </select>
    
    <select id="selectInStoreMainById" parameterType="Long" resultMap="InStoreMainInStoreDetailResult">
        select a.id, a.ptype, a.pcode, a.input_user, a.input_time, a.remark, a.is_valid, a.create_by, a.create_time, a.update_by, a.update_time, a.attribute1, a.attribute2, a.attribute3,
            b.id as sub_id, b.main_id as sub_main_id, b.mcode as sub_mcode, b.mname as sub_mname, b.mlot as sub_mlot, b.vendor as sub_vendor,  b.qty as sub_qty, b.iqty as sub_iqty, b.unit as sub_unit, b.is_valid as sub_is_valid, b.create_by as sub_create_by, b.create_time as sub_create_time, b.update_by as sub_update_by, b.update_time as sub_update_time, b.attribute1 as sub_attribute1, b.attribute2 as sub_attribute2, b.attribute3 as sub_attribute3
        from in_store_main a
        left join in_store_detail b on b.main_id = a.id
        where a.id = #{id}
    </select>
        
    <insert id="insertInStoreMain" parameterType="InStoreMain" useGeneratedKeys="true" keyProperty="id">
        insert into in_store_main
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ptype != null">ptype,</if>
            <if test="pcode != null and pcode != ''">pcode,</if>
            <if test="inputUser != null">input_user,</if>
            <if test="inputTime != null">input_time,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time,
            <if test="updateBy != null">update_by,</if>
            update_time,
            <if test="attribute1 != null">attribute1,</if>
            <if test="attribute2 != null">attribute2,</if>
            <if test="attribute3 != null">attribute3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ptype != null">#{ptype},</if>
            <if test="pcode != null and pcode != ''">#{pcode},</if>
            <if test="inputUser != null">#{inputUser},</if>
            <if test="inputTime != null">#{inputTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate(),
            <if test="updateBy != null">#{updateBy},</if>
            sysdate(),
            <if test="attribute1 != null">#{attribute1},</if>
            <if test="attribute2 != null">#{attribute2},</if>
            <if test="attribute3 != null">#{attribute3},</if>
         </trim>
    </insert>

    <update id="updateInStoreMain" parameterType="InStoreMain">
        update in_store_main
        <trim prefix="SET" suffixOverrides=",">
            <if test="ptype != null">ptype = #{ptype},</if>
            <if test="pcode != null and pcode != ''">pcode = #{pcode},</if>
            <if test="inputUser != null">input_user = #{inputUser},</if>
            <if test="inputTime != null">input_time = #{inputTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="isValid != null">is_valid = #{isValid},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate(),
            <if test="attribute1 != null">attribute1 = #{attribute1},</if>
            <if test="attribute2 != null">attribute2 = #{attribute2},</if>
            <if test="attribute3 != null">attribute3 = #{attribute3},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateInStoreMainById" parameterType="Long">
        update in_store_main set is_valid = 0 where id = #{id}
    </update>

    <update id="updateInStoreMainByIds" parameterType="String">
        update in_store_main set is_valid = 0 where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <delete id="deleteInStoreMainById" parameterType="Long">
        delete from in_store_main where id = #{id}
    </delete>

    <delete id="deleteInStoreMainByIds" parameterType="String">
        delete from in_store_main where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteInStoreDetailByMainIds" parameterType="String">
        delete from in_store_detail where main_id in 
        <foreach item="mainId" collection="array" open="(" separator="," close=")">
            #{mainId}
        </foreach>
    </delete>

    <delete id="deleteInStoreDetailByMainId" parameterType="Long">
        delete from in_store_detail where main_id = #{mainId}
    </delete>

    <insert id="batchInStoreDetail">
        insert into in_store_detail( id, main_id, mcode, mname, mlot, vendor,  qty, iqty, unit, is_valid, create_by, create_time, update_by, update_time, attribute1, attribute2, attribute3) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.mainId}, #{item.mcode}, #{item.mname}, #{item.mlot}, #{item.vendor}, #{item.qty}, #{item.iqty}, #{item.unit}, '1', #{item.createBy}, sysdate(), #{item.updateBy}, sysdate(), #{item.attribute1}, #{item.attribute2}, #{item.attribute3})
        </foreach>
    </insert>

</mapper>