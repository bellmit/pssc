<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saas.pssc.mapper.InStoreDetailMapper">
    
    <resultMap type="InStoreDetail" id="InStoreDetailResult">
        <result property="id"    column="id"    />
        <result property="mainId"    column="main_id"    />
        <result property="mcode"    column="mcode"    />
        <result property="mname"    column="mname"    />
        <result property="mlot"    column="mlot"    />
        <result property="vendor"    column="vendor"    />
        <result property="qty"    column="qty"    />
        <result property="iqty"    column="iqty"    />
        <result property="unit"    column="unit"    />
        <result property="isValid"    column="is_valid"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="attribute1"    column="attribute1"    />
        <result property="attribute2"    column="attribute2"    />
        <result property="attribute3"    column="attribute3"    />
    </resultMap>

    <sql id="selectInStoreDetailVo">
        select t.id, t.main_id, mcode, mname, mlot, vendor, qty, iqty, unit, t.is_valid, t.create_by, t.create_time, t.update_by, t.update_time, t.attribute1, t.attribute2, t.attribute3,
        m.pcode,su.user_name input_user,m.input_time 
        from in_store_detail t 
        left join in_store_main m on t.main_id = m.id 
        left join sys_user su on m.input_user = su.login_name
    </sql>

    <select id="selectInStoreDetailList" parameterType="InStoreDetail" resultMap="InStoreDetailResult">
        <include refid="selectInStoreDetailVo"/>
        <where>  
            <if test="mainId != null "> and main_id = #{mainId}</if>
            <if test="mcode != null  and mcode != ''"> and mcode = #{mcode}</if>
            <if test="mname != null  and mname != ''"> and mname like concat('%', #{mname}, '%')</if>
            <if test="mlot != null  and mlot != ''"> and mlot = #{mlot}</if>
            <if test="vendor != null  and vendor != ''"> and vendor = #{vendor}</if>
            <if test="ptype != null "> and ptype = #{ptype}</if>
            <if test="qty != null "> and qty = #{qty}</if>
            <if test="iqty != null "> and iqty = #{iqty}</if>
            <if test="unit != null  and unit != ''"> and unit = #{unit}</if>
             and t.is_valid = '1'
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by t.create_time desc
    </select>
    
    <select id="selectInStoreDetailById" parameterType="Long" resultMap="InStoreDetailResult">
        <include refid="selectInStoreDetailVo"/>
        where d.id = #{id}
    </select>
        
    <insert id="insertInStoreDetail" parameterType="InStoreDetail" useGeneratedKeys="true" keyProperty="id">
        insert into in_store_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="mainId != null">main_id,</if>
            <if test="mcode != null">mcode,</if>
            <if test="mname != null">mname,</if>
            <if test="mlot != null and mlot != ''">mlot,</if>
            <if test="vendor != null">vendor,</if>
            <if test="qty != null">qty,</if>
            <if test="iqty != null">iqty,</if>
            <if test="unit != null">unit,</if>
            
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time,
            <if test="updateBy != null">update_by,</if>
            update_time,
            <if test="attribute1 != null">attribute1,</if>
            <if test="attribute2 != null">attribute2,</if>
            <if test="attribute3 != null">attribute3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="mainId != null">#{mainId},</if>
            <if test="mcode != null">#{mcode},</if>
            <if test="mname != null">#{mname},</if>
            <if test="mlot != null and mlot != ''">#{mlot},</if>
            <if test="vendor != null">#{vendor},</if>
            <if test="qty != null">#{qty},</if>
            <if test="iqty != null">#{iqty},</if>
            <if test="unit != null">#{unit},</if>
            
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate(),
            <if test="updateBy != null">#{updateBy},</if>
            sysdate(),
            <if test="attribute1 != null">#{attribute1},</if>
            <if test="attribute2 != null">#{attribute2},</if>
            <if test="attribute3 != null">#{attribute3},</if>
         </trim>
    </insert>

    <update id="updateInStoreDetail" parameterType="InStoreDetail">
        update in_store_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="mainId != null">main_id = #{mainId},</if>
            <if test="mcode != null">mcode = #{mcode},</if>
            <if test="mname != null">mname = #{mname},</if>
            <if test="mlot != null and mlot != ''">mlot = #{mlot},</if>
            <if test="vendor != null">vendor = #{vendor},</if>
            <if test="qty != null">qty = #{qty},</if>
            <if test="iqty != null">iqty = #{iqty},</if>
            <if test="unit != null">unit = #{unit},</if>
            <if test="isValid != null">is_valid = #{isValid},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate(),
            <if test="attribute1 != null">attribute1 = #{attribute1},</if>
            <if test="attribute2 != null">attribute2 = #{attribute2},</if>
            <if test="attribute3 != null">attribute3 = #{attribute3},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteInStoreDetailById" parameterType="Long">
        delete from in_store_detail where id = #{id}
    </delete>

    <delete id="deleteInStoreDetailByIds" parameterType="String">
        delete from in_store_detail where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>