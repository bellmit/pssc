<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saas.pssc.mapper.BsProSopMainMapper">
    
    <resultMap type="BsProSopMain" id="BsProSopMainResult">
        <result property="id"    column="id"    />
        <result property="pcode"    column="pcode"    />
        <result property="name"    column="name"    />
        <result property="spec"    column="spec"    />
        <result property="remark"    column="remark"    />
        <result property="isValid"    column="is_valid"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="attribute1"    column="attribute1"    />
        <result property="attribute2"    column="attribute2"    />
        <result property="attribute3"    column="attribute3"    />
    </resultMap>

    <resultMap id="BsProSopMainBsProSopDetailResult" type="BsProSopMain" extends="BsProSopMainResult">
        <collection property="bsProSopDetailList" notNullColumn="sub_id" javaType="java.util.List" resultMap="BsProSopDetailResult" />
    </resultMap>

    <resultMap type="BsProSopDetail" id="BsProSopDetailResult">
        <result property="id"    column="sub_id"    />
        <result property="mainId"    column="sub_main_id"    />
        <result property="orderno"    column="sub_orderno"    />
        <result property="pcode"    column="sub_pcode"    />
        <result property="name"    column="sub_name"    />
        <result property="standard"    column="sub_standard"    />
        <result property="method"    column="sub_method"    />
        <result property="remark"    column="sub_remark"    />
        <result property="isValid"    column="sub_is_valid"    />
        <result property="createBy"    column="sub_create_by"    />
        <result property="createTime"    column="sub_create_time"    />
        <result property="updateBy"    column="sub_update_by"    />
        <result property="updateTime"    column="sub_update_time"    />
        <result property="attribute1"    column="sub_attribute1"    />
        <result property="attribute2"    column="sub_attribute2"    />
        <result property="attribute3"    column="sub_attribute3"    />
    </resultMap>

    <sql id="selectBsProSopMainVo">
        select id, pcode, name, spec, t.remark, t.is_valid, t.create_by, t.create_time, t.update_by, t.update_time, attribute1, attribute2, attribute3 
        from bs_pro_sop_main t left join sys_user su on t.create_by = su.login_name
    </sql>

    <select id="selectBsProSopMainList" parameterType="BsProSopMain" resultMap="BsProSopMainResult">
        <include refid="selectBsProSopMainVo"/>
        <where>  
            <if test="pcode != null  and pcode != ''"> and pcode like concat('%', #{pcode}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="spec != null  and spec != ''"> and spec like concat('%', #{spec}, '%')</if>
            and is_valid = '1' 
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by t.create_time desc
    </select>
    
    <select id="selectBsProSopMainById" parameterType="String" resultMap="BsProSopMainBsProSopDetailResult">
        select a.id, a.pcode, a.name, a.spec, a.remark, a.is_valid, a.create_by, a.create_time, a.update_by, a.update_time, a.attribute1, a.attribute2, a.attribute3,
            b.id as sub_id, b.main_id as sub_main_id, b.orderno as sub_orderno, b.pcode as sub_pcode, b.name as sub_name, b.standard as sub_standard, b.method as sub_method, b.remark as sub_remark, b.is_valid as sub_is_valid, b.create_by as sub_create_by, b.create_time as sub_create_time, b.update_by as sub_update_by, b.update_time as sub_update_time, b.attribute1 as sub_attribute1, b.attribute2 as sub_attribute2, b.attribute3 as sub_attribute3
        from bs_pro_sop_main a
        left join bs_pro_sop_detail b on b.main_id = a.id
        where a.id = #{id}
        order by b.orderno
    </select>
        
    <insert id="insertBsProSopMain" parameterType="BsProSopMain">
        insert into bs_pro_sop_main
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="pcode != null and pcode != ''">pcode,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="spec != null">spec,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time,
            <if test="updateBy != null">update_by,</if>
            update_time,
            <if test="attribute1 != null">attribute1,</if>
            <if test="attribute2 != null">attribute2,</if>
            <if test="attribute3 != null">attribute3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="pcode != null and pcode != ''">#{pcode},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="spec != null">#{spec},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate(),
            <if test="updateBy != null">#{updateBy},</if>
            sysdate(),
            <if test="attribute1 != null">#{attribute1},</if>
            <if test="attribute2 != null">#{attribute2},</if>
            <if test="attribute3 != null">#{attribute3},</if>
         </trim>
    </insert>

    <update id="updateBsProSopMain" parameterType="BsProSopMain">
        update bs_pro_sop_main
        <trim prefix="SET" suffixOverrides=",">
            <if test="pcode != null and pcode != ''">pcode = #{pcode},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="spec != null">spec = #{spec},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate(),
            <if test="attribute1 != null">attribute1 = #{attribute1},</if>
            <if test="attribute2 != null">attribute2 = #{attribute2},</if>
            <if test="attribute3 != null">attribute3 = #{attribute3},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateBsProSopMainById" parameterType="String">
        update bs_pro_sop_main set is_valid = '0' where id = #{id}
    </update>

    <update id="updateBsProSopMainByIds" parameterType="String">
        update bs_pro_sop_main set is_valid = '0' where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    
    <delete id="deleteBsProSopMainById" parameterType="String">
        delete from bs_pro_sop_main where id = #{id}
    </delete>

    <delete id="deleteBsProSopMainByIds" parameterType="String">
        delete from bs_pro_sop_main where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteBsProSopDetailByMainIds" parameterType="String">
        delete from bs_pro_sop_detail where main_id in 
        <foreach item="mainId" collection="array" open="(" separator="," close=")">
            #{mainId}
        </foreach>
    </delete>

    <delete id="deleteBsProSopDetailByMainId" parameterType="String">
        delete from bs_pro_sop_detail where main_id = #{mainId}
    </delete>

    <insert id="batchBsProSopDetail">
        insert into bs_pro_sop_detail( id, main_id, orderno, pcode, name, standard, method, remark, create_by, create_time, update_by, update_time, attribute1, attribute2, attribute3) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.mainId}, #{item.orderno}, #{item.pcode}, #{item.name}, #{item.standard}, #{item.method}, #{item.remark},  #{item.createBy}, sysdate(), #{item.updateBy}, sysdate(), #{item.attribute1}, #{item.attribute2}, #{item.attribute3})
        </foreach>
    </insert>

</mapper>